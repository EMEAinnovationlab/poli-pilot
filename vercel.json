{
  "version": 2,
  "functions": {
    "api/index.js": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    { "src": "^/(auth)(?:/.*)?$", "dest": "/api/index.js" },
    { "src": "^/(admin)(?:/.*)?$", "dest": "/api/index.js" },
    { "src": "^/chat$", "dest": "/api/index.js" },
    { "src": "^/(documents)(?:/.*)?$", "dest": "/api/index.js" },
    { "src": "^/project-settings$", "dest": "/api/index.js" },
    { "src": "^/site-content$", "dest": "/api/index.js" }

  ]
}
